<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#898989"/>
            <size android:width="28dp"
                android:height="28dp"/>
